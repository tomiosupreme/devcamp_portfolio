<h1>Create a new portfolio item</h1>

<%= form_for(@portfolio_items) do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, id: :blog_title %>
  </div>

  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_area :subtitle, id: :blog_subtitle %>
  </div>
  
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body, id: :blog_body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
